<div class="row">
  <div class="col-md-6 col-12">
    <%= form_with(model: @location, url: checkout_post_path) do |form| %>
      <div class = "form-group">
        <%= form.select :country, [:USA, :INDIA, :BRITAIN] %>
      </div>
      <div class = "form-group">
        <%= form.text_field :state, class:'form-control',placeholder:'State' %>
      </div>
      <div class = "form-group">
        <%= form.text_field :city, class:'form-control',placeholder:'City'   %>
      </div>

      <div class="zip-code-group form-group">
        <label for="ZIPCode">ZIP/Postal code</label>
        <div class="input-container">
          <input id="ZIPCode" class="form-control" type="text" maxlength="10"></input>
          <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-placement="left" data-content="Enter the ZIP/Postal code for your credit card billing address."><i class="fa fa-question-circle"></i></a>
        </div>
      </div>
      <div class = "form-group">
        <%= form.text_field :zip_code, class:'form-control',placeholder:'Zip Code'   %>
      </div>
      <div class = "form-group">
        <%= form.text_field :address, class:'form-control',placeholder:'Address'   %>
      </div>
      <div class = "form-group">
        <%= form.submit 'Update Address', class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-6 col-12">
    <div class="inline" id = "Checkout">
      <h1>Pay Invoice</h1>
      <div class="card-row">
        <span class="visa"></span>
        <span class="mastercard"></span>
        <span class="amex"></span>
        <span class="discover"></span>
      </div>
      <%= form_with(url: payment_post_path) do |f| %>
        <div class="form-group">
          <label for="PaymentAmount">Payment amount</label>
          <div class="amount-placeholder">
            <span>$</span>
            <span>500</span>
          </div>
        </div>
        <div class="form-group">
          <label or="NameOnCard">Name on card</label>
          <%= f.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]], class:'form-control' %>
        </div>
        <div class="form-group">
          <label for="CreditCardNumber">Card number</label>
          <%= f.text_field :name,class:"null card-image form-control",id:'CreditCardNumber'%>
        </div>
        <div class="expiry-date-group form-group">
          <label for="ExpiryDate">Expiry date</label>
          <%= f.text_field :expiry_date, class:'form-control',placeholder:"MM / YY",maxlength:"7",id:"ExpiryDate"%>
        </div>
        <div class="security-code-group form-group">
          <label for="SecurityCode">Security code</label>
          <div class="input-container" >
            <%= f.text_field :security_code, class:"form-control", id:"SecurityCode"%>
            <i id="cvc" class="fa fa-question-circle"></i>
          </div>
          <div class="cvc-preview-container two-card hide">
            <div class="amex-cvc-preview"></div>
            <div class="visa-mc-dis-cvc-preview"></div>
          </div>
        </div>
        <%= f.submit(id:'PayButton',class:'btn btn-block btn-success submit-button') do %>
          <span class="submit-button-lock"></span>
          <span class="align-middle">Pay $500.00</span>
        <% end %>
        <button id="PayButton" class="btn btn-block btn-success submit-button" type="submit">
          <span class="submit-button-lock"></span>
          <span class="align-middle">Pay $500.00</span>
        </button>
      <% end %>
    </div>
  </div>
</div>




<style>
.main {
  width:80%;
}
.stripe {
  width:100px;
}

</style>
